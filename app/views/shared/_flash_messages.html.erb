<% flash.each do |key, value| %>
  <script type="text/javascript">
  <% if key == :alert %>
    toastr.error("<%= value %>");
  <% end %>
  <% if key == :info %>
    toastr.info("<%= value %>");
  <% end %>
  <% if key == :notice %>
    toastr.success("<%= value %>");
  <% end %>
  <% if key == :success %>
    toastr.success("<%= value %>");
  <% end %>
  </script>
<% end %>